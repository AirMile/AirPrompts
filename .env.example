# AirPrompts Environment Variables Template
# Copy this file to .env.local for development or .env.production for production

# ===========================
# API Configuration
# ===========================
# Backend API URL (if using external API)
VITE_API_URL=http://localhost:3001

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ===========================
# Feature Flags
# ===========================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPORT=true
VITE_ENABLE_IMPORT=true
VITE_ENABLE_SHARING=false
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_CLOUD_SYNC=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_BETA_FEATURES=false

# ===========================
# Storage Configuration
# ===========================
# Local storage prefix to avoid conflicts
VITE_STORAGE_PREFIX=airprompts_

# Maximum storage size in bytes (10MB default)
VITE_MAX_STORAGE_SIZE=10485760

# Storage version for migrations
VITE_STORAGE_VERSION=1

# ===========================
# UI/UX Configuration
# ===========================
# Default theme (light/dark/system)
VITE_DEFAULT_THEME=system

# Default view mode (grid/list/compact)
VITE_DEFAULT_VIEW_MODE=grid

# Items per page for pagination
VITE_ITEMS_PER_PAGE=12

# Enable animations
VITE_ENABLE_ANIMATIONS=true

# ===========================
# Analytics & Monitoring
# ===========================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry error tracking
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Mixpanel analytics
VITE_MIXPANEL_TOKEN=

# ===========================
# Security Configuration
# ===========================
# Content Security Policy mode (report-only/enforce)
VITE_CSP_MODE=report-only

# Allowed domains for external resources
VITE_ALLOWED_DOMAINS=localhost,127.0.0.1

# Enable CORS credentials
VITE_ENABLE_CREDENTIALS=false

# ===========================
# Development Configuration
# ===========================
# Enable debug mode
VITE_DEBUG=false

# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Mock API responses
VITE_MOCK_API=false

# ===========================
# Performance Configuration
# ===========================
# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Lazy load threshold (ms)
VITE_LAZY_LOAD_DELAY=300

# Virtual scrolling threshold
VITE_VIRTUAL_SCROLL_THRESHOLD=100

# ===========================
# External Services
# ===========================
# OpenAI API (if integrating)
VITE_OPENAI_API_KEY=

# GitHub integration
VITE_GITHUB_CLIENT_ID=
VITE_GITHUB_REDIRECT_URI=

# OAuth providers
VITE_OAUTH_GOOGLE_CLIENT_ID=
VITE_OAUTH_MICROSOFT_CLIENT_ID=

# ===========================
# Build Configuration
# ===========================
# Public URL for assets
VITE_PUBLIC_URL=/

# Source map generation
VITE_GENERATE_SOURCEMAP=false

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# ===========================
# Experimental Features
# ===========================
# Enable experimental features (use with caution)
VITE_EXPERIMENTAL_FEATURES=false

# Web Workers for heavy operations
VITE_ENABLE_WEB_WORKERS=false

# IndexedDB for large data storage
VITE_ENABLE_INDEXED_DB=false

# WebAssembly modules
VITE_ENABLE_WASM=false